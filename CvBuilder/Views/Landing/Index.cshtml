@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, maximum-scale=5, user-scalable=yes" />
    <meta name="theme-color" content="#16A34A" />
    <meta name="mobile-web-app-capable" content="yes" />
    <title>Profilio.space - Create Your Professional Portfolio</title>
    <link rel="icon" type="image/x-icon" href="~/public/favicon.png" />
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>
    <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['"Plus Jakarta Sans"', 'sans-serif'] },
                    colors: {
                        app: {
                            primary: '#16A34A',
                            secondary: '#DCFCE7',
                            dark: '#0F172A',
                            bg: '#F1F5F9',
                            soft: '#CBD5E1',
                            textMain: '#1E293B',
                            textSub: '#64748B',
                        }
                    },
                    animation: {
                        'fade-in-down': 'fadeInDown 0.6s ease-out'
                    },
                    keyframes: {
                        fadeInDown: {
                            '0%': { opacity: '0', transform: 'translateY(-20px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' },
                        }
                    }
                }
            }
        }
    </script>
    <style>
        /* --- SCROLLBAR STİLİ (Index.cshtml'den alındı) --- */
        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: #0F172A; /* Sidebar rengiyle uyumlu koyu arka plan */
        }

        ::-webkit-scrollbar-thumb {
            background: #334155;
            border-radius: 3px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #16A34A; /* Yeşil hover efekti */
            }
        
        /* Mobile Optimizations */
        @@media (max-width: 640px) {
            /* Prevent text size adjustment on iOS */
            html {
                -webkit-text-size-adjust: 100%;
            }
            
            /* Better touch targets */
            a, button {
                min-height: 44px;
                min-width: 44px;
            }
            
            /* Smooth scrolling */
            html {
                scroll-behavior: smooth;
            }
        }
        
        /* Touch optimization */
        * {
            -webkit-tap-highlight-color: transparent;
        }
        
        /* Prevent pull-to-refresh on mobile */
        body {
            overscroll-behavior-y: contain;
            font-variant-ligatures: none;
        }
    </style>
</head>
<body class="bg-app-bg text-app-textMain antialiased leading-relaxed font-medium">

    @Html.Partial("_Header")

    <!-- Hero Section -->
    <section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
        <!-- Hero Background Image -->
        <div class="absolute inset-0 z-0">
            <img src="~/public/ab.jpg" alt="Hero Background" 
                 class="w-full h-full object-cover"
                 onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
            <div class="hidden w-full h-full bg-gradient-to-br from-app-dark via-app-dark/95 to-app-primary/20"></div>
        </div>
        
        <!-- Animated Gradient Overlay -->
        <div class="absolute inset-0 bg-gradient-to-br from-app-dark/80 via-app-dark/70 to-app-primary/30 z-10"></div>
        <div class="absolute inset-0 bg-gradient-to-tr from-transparent via-app-primary/10 to-transparent z-10 animate-pulse"></div>
        
        <!-- Floating Decorative Elements -->
        <div class="hidden md:block absolute top-20 left-10 w-72 h-72 bg-app-primary/10 rounded-full blur-3xl animate-pulse z-10"></div>
        <div class="hidden md:block absolute bottom-20 right-10 w-96 h-96 bg-app-primary/5 rounded-full blur-3xl animate-pulse z-10" style="animation-delay: 1s;"></div>
        <div class="hidden md:block absolute top-1/2 left-1/4 w-64 h-64 bg-app-primary/8 rounded-full blur-2xl animate-pulse z-10" style="animation-delay: 2s;"></div>
        
        <!-- Grid Pattern Overlay -->
        <div class="hidden md:block absolute inset-0 z-10 opacity-10" style="background-image: linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
        
        <!-- Hero Content -->
        <div class="relative z-20 max-w-5xl mx-auto px-4 sm:px-6 text-center pt-32 pb-20 sm:pt-32 sm:pb-32">
            <!-- Badge -->
            <div class="inline-flex items-center gap-2 px-3 py-1.5 sm:px-4 sm:py-2 mb-6 sm:mb-6 bg-white/10 backdrop-blur-md border border-white/20 rounded-full text-white/90 text-xs sm:text-sm font-medium animate-fade-in-down">
                <i class="fas fa-rocket text-app-primary text-xs"></i>
                <span class="whitespace-nowrap">Start building your professional portfolio today</span>
            </div>
            
