    <script>
        // Accordion toggle function
        function toggleAccordion(contentId, iconId) {
            const content = document.getElementById(contentId);
            const icon = document.getElementById(iconId);
            
            if (content.classList.contains('hidden')) {
                content.classList.remove('hidden');
                icon.classList.remove('fa-chevron-down');
                icon.classList.add('fa-chevron-up');
            } else {
                content.classList.add('hidden');
                icon.classList.remove('fa-chevron-up');
                icon.classList.add('fa-chevron-down');
            }
        }

        // Open accordion if hash is present in URL
        function openAccordionFromHash() {
            const hash = window.location.hash;
            if (hash) {
                const targetId = hash.substring(1); // Remove #
                const accordionMap = {
                    'gdpr': { content: 'gdpr-content', icon: 'gdpr-icon' },
                    'privacy': { content: 'privacy-content', icon: 'privacy-icon' },
                    'terms': { content: 'terms-content', icon: 'terms-icon' },
                    'disclaimer': { content: 'disclaimer-content', icon: 'disclaimer-icon' }
                };
                
                if (accordionMap[targetId]) {
                    const { content, icon } = accordionMap[targetId];
                    const contentEl = document.getElementById(content);
                    const iconEl = document.getElementById(icon);
                    
                    if (contentEl && contentEl.classList.contains('hidden')) {
                        contentEl.classList.remove('hidden');
                        iconEl.classList.remove('fa-chevron-down');
                        iconEl.classList.add('fa-chevron-up');
                    }
                }
            }
        }

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const href = this.getAttribute('href');
                if (href !== '#' && href.length > 1) {
                    e.preventDefault();
                    const target = document.querySelector(href);
                    if (target) {
                        // Smooth scroll to target with offset for fixed header
                        const headerOffset = 80;
                        const elementPosition = target.getBoundingClientRect().top;
                        const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

                        window.scrollTo({
                            top: offsetPosition,
                            behavior: 'smooth'
                        });
                        
                        // Open accordion if it's a legal section
                        setTimeout(() => {
                            openAccordionFromHash();
                        }, 500);
                    }
                }
            });
        });

        // Scroll to top function
        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }


        // Show/hide scroll buttons based on scroll position
        window.addEventListener('scroll', function() {
            const scrollButtons = document.getElementById('scrollButtons');
            if (window.pageYOffset > 300) {
                scrollButtons.classList.remove('opacity-0');
                scrollButtons.classList.add('opacity-100');
            } else {
                scrollButtons.classList.remove('opacity-100');
                scrollButtons.classList.add('opacity-0');
            }
        });

        // Open accordion on page load if hash is present
        window.addEventListener('load', function() {
            openAccordionFromHash();
        });

        // Also check on hash change
        window.addEventListener('hashchange', function() {
            openAccordionFromHash();
        });
    </script>
