    <!-- Scroll to Top Floating Button -->
    <div id="scrollButtons" class="fixed bottom-4 right-4 sm:bottom-6 sm:right-6 z-50 opacity-0 transition-opacity duration-300">
        <button onclick="scrollToTop()" class="w-12 h-12 bg-app-primary text-white rounded-full border border-transparent shadow-sm hover:bg-app-primaryHover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-900 transition-all duration-200 flex items-center justify-center touch-manipulation" title="Scroll to Top" aria-label="Scroll to top">
            <i class="fas fa-arrow-up"></i>
        </button>
    </div>

    @Html.Partial("_Footer")

    <script>
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const href = this.getAttribute('href');
                if (href !== '#' && href.length > 1) {
                    e.preventDefault();
                    const target = document.querySelector(href);
                    if (target) {
                        // Smooth scroll to target with offset for fixed header
                        const headerOffset = 80;
                        const elementPosition = target.getBoundingClientRect().top;
                        const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

                        window.scrollTo({
                            top: offsetPosition,
                            behavior: 'smooth'
                        });
                    }
                }
            });
        });

        // Scroll to top function
        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }

        // Show/hide scroll buttons based on scroll position
        window.addEventListener('scroll', function() {
            const scrollButtons = document.getElementById('scrollButtons');
            if (window.pageYOffset > 300) {
                scrollButtons.classList.remove('opacity-0');
                scrollButtons.classList.add('opacity-100');
            } else {
                scrollButtons.classList.remove('opacity-100');
                scrollButtons.classList.add('opacity-0');
            }
        });
    </script>
</body>
</html>
