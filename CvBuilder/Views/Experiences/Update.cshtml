@using CvBuilder.Models.Entity
@model experiences
@{
    ViewBag.Title = "Update Experience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex items-center justify-between mb-6">
    <div>
        <h2 class="text-2xl font-bold text-app-textMain">Update Experience</h2>
        <p class="text-sm text-app-textSub">Edit the details of your past work position.</p>
    </div>
    <a href="/admin/experiences" class="text-app-textSub hover:text-app-primary text-sm font-medium transition-colors">
        <i class="fas fa-arrow-left mr-1"></i> Back to List
    </a>
</div>

<div class="bg-white rounded-xl shadow-sm border border-app-soft overflow-hidden">
    <div class="p-8">

        <form method="post" class="space-y-6">

            <input type="hidden" name="id" value="@Model.id" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                <div class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700 block">
                        Company Name <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-building text-gray-400"></i>
                        </div>
                        <input type="text" name="company" value="@Model.company" placeholder="e.g. Microsoft" required
                               class="w-full pl-10 pr-4 py-2.5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-2 focus:ring-app-primary/20 focus:border-app-primary block transition-all duration-200 outline-none" />
                    </div>
                </div>

                <div class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700 block">
                        Job Title <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-id-card text-gray-400"></i>
                        </div>
                        <input type="text" name="title" value="@Model.title" placeholder="e.g. Senior Architect" required
                               class="w-full pl-10 pr-4 py-2.5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-2 focus:ring-app-primary/20 focus:border-app-primary block transition-all duration-200 outline-none" />
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                <div class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700 block">Start Date</label>
                    <input type="date" name="start_date"
                           value="@(Model.start_date.HasValue ? Model.start_date.Value.ToString("yyyy-MM-dd") : "")"
                           class="w-full px-4 py-2.5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-2 focus:ring-app-primary/20 focus:border-app-primary block transition-all duration-200 outline-none" />
                </div>

                <div class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700 block">End Date</label>
                    <input type="date" name="end_date"
                           value="@(Model.end_date.HasValue ? Model.end_date.Value.ToString("yyyy-MM-dd") : "")"
                           class="w-full px-4 py-2.5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-2 focus:ring-app-primary/20 focus:border-app-primary block transition-all duration-200 outline-none" />
                    <p class="text-xs text-gray-500 mt-1">Leave empty if this is your current position.</p>
                </div>
            </div>

            <div class="space-y-2">
                <label class="text-sm font-semibold text-gray-700 block">Description</label>
                <textarea name="description" rows="5" placeholder="Describe your responsibilities..."
                          class="w-full p-4 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-2 focus:ring-app-primary/20 focus:border-app-primary block transition-all duration-200 outline-none resize-none">@Model.description</textarea>
            </div>

            <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-100">

                <a href="/admin/experiences" class="px-5 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-200 transition-all">
                    Cancel
                </a>

                <button type="submit" class="inline-flex items-center px-6 py-2.5 text-sm font-medium text-white bg-app-primary rounded-lg hover:bg-app-accent focus:outline-none focus:ring-4 focus:ring-green-300 shadow-md hover:shadow-lg transition-all duration-200">
                    <i class="fas fa-check mr-2"></i> Update Changes
                </button>
            </div>

        </form>
    </div>
</div>