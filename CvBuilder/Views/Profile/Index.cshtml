@model CvBuilder.Models.Entity.users
@{
    ViewBag.Title = "Account Settings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mx-auto">

    <div class="mb-4 sm:mb-6 md:mb-8">
        <h2 class="text-xl sm:text-2xl font-bold text-app-textMain">Profile & Security</h2>
        <p class="text-app-textSub text-xs sm:text-sm mt-1">Manage your account details and password.</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-4 sm:gap-6 md:gap-8">

        <div class="lg:col-span-4 space-y-4 sm:space-y-6">
            <div class="bg-white rounded-xl shadow-sm border border-app-soft overflow-hidden">
                <div class="h-20 sm:h-24 bg-gradient-to-r from-app-primary to-app-secondary">
                    @if (ViewBag.character_type != null)
                    {
                        <div class="pointer-events-none flex justify-end">
                            <img src="~/public/icons/@(ViewBag.character_type).png"
                                 alt="Character Icon"
                                 class="w-12 h-12 sm:w-14 sm:h-14 md:w-16 md:h-16 object-contain opacity-50" />
                        </div>
                    }
                </div>
                <div class="px-4 sm:px-5 md:px-6 pb-4 sm:pb-5 md:pb-6 relative">
                    <div class="-mt-10 sm:-mt-12 mb-3 sm:mb-4 flex justify-center">
                        <div class="p-1 bg-white rounded-full">
                            <img src="@ViewBag.ProfileImage" alt="Profile" class="w-20 h-20 sm:w-24 sm:h-24 md:w-24 md:h-24 rounded-full object-cover border-4 border-white shadow-md">
                        </div>
                    </div>

                    <div class="text-center mb-4 sm:mb-6">
                        <h3 class="text-lg sm:text-xl font-bold text-app-textMain">@ViewBag.FullName</h3>
                        <p class="text-xs sm:text-sm text-app-textSub">@Model.username</p>
                    </div>

                    <div class="space-y-3 sm:space-y-4">
                        <div>
                            <label class="block text-xs font-semibold text-app-textSub uppercase mb-1 ml-1">Username</label>
                            <div class="flex items-center px-3 sm:px-4 py-2.5 sm:py-3 bg-app-bg rounded-lg border border-transparent text-app-textMain opacity-75 cursor-not-allowed">
                                <i class="fas fa-user text-app-textSub mr-2 sm:mr-3 text-xs sm:text-sm"></i>
                                <span class="font-medium text-xs sm:text-sm truncate">@Model.username</span>
                            </div>
                        </div>

                        <div>
                            <label class="block text-xs font-semibold text-app-textSub uppercase mb-1 ml-1">Email Address</label>
                            <div class="flex items-center px-3 sm:px-4 py-2.5 sm:py-3 bg-app-bg rounded-lg border border-transparent text-app-textMain opacity-75 cursor-not-allowed">
                                <i class="fas fa-envelope text-app-textSub mr-2 sm:mr-3 text-xs sm:text-sm"></i>
                                <span class="font-medium text-xs sm:text-sm truncate">@Model.email</span>
                            </div>
                        </div>

                        <div class="flex items-start p-2.5 sm:p-3 bg-blue-50 rounded-lg text-blue-700 text-xs mt-3 sm:mt-4">
                            <i class="fas fa-info-circle mt-0.5 mr-2 text-base sm:text-lg shrink-0"></i>
                            <p class="leading-relaxed">For security reasons, username and email address cannot be changed directly. Contact support for assistance.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-8">
            <div class="bg-white rounded-xl shadow-sm border border-app-soft p-4 sm:p-5 md:p-6 lg:p-8">
                <div class="flex items-center justify-between mb-4 sm:mb-5 md:mb-6 border-b border-app-soft pb-3 sm:pb-4">
                    <h3 class="text-base sm:text-lg font-bold text-app-textMain flex items-center">
                        <i class="fas fa-lock text-app-primary mr-2 text-sm sm:text-base"></i> 
                        <span class="text-sm sm:text-base">Change Password</span>
                    </h3>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="mb-4 sm:mb-5 md:mb-6 p-3 sm:p-4 rounded-lg bg-red-50 border border-red-100 flex items-start sm:items-center text-red-700">
                        <i class="fas fa-times-circle text-lg sm:text-xl mr-2 sm:mr-3 mt-0.5 sm:mt-0 shrink-0"></i>
                        <span class="font-medium text-xs sm:text-sm">@ViewBag.Error</span>
                    </div>
                }
                @if (ViewBag.Success != null)
                {
                    <div class="mb-4 sm:mb-5 md:mb-6 p-3 sm:p-4 rounded-lg bg-green-50 border border-green-100 flex items-start sm:items-center text-green-700">
                        <i class="fas fa-check-circle text-lg sm:text-xl mr-2 sm:mr-3 mt-0.5 sm:mt-0 shrink-0"></i>
                        <span class="font-medium text-xs sm:text-sm">@ViewBag.Success</span>
                    </div>
                }

                <form action="/Profile/ChangePassword" method="post" class="space-y-4 sm:space-y-5 md:space-y-6">

                    <div>
                        <label class="block text-xs sm:text-sm font-semibold text-app-textMain mb-1.5 sm:mb-2">Current Password</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-key text-gray-400 text-xs sm:text-sm"></i>
                            </div>
                            <input type="password" name="current_password" required
                                   class="w-full pl-9 sm:pl-10 pr-3 sm:pr-4 py-2.5 sm:py-3 rounded-lg border border-gray-200 focus:border-app-primary focus:ring-2 focus:ring-app-primary/20 outline-none transition-all text-xs sm:text-sm font-medium placeholder-gray-400"
                                   placeholder="Enter your current password">
                        </div>
                    </div>

                    <div class="border-t border-app-soft my-2"></div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-5 md:gap-6">
                        <div>
                            <label class="block text-xs sm:text-sm font-semibold text-app-textMain mb-1.5 sm:mb-2">New Password</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-shield-alt text-gray-400 text-xs sm:text-sm"></i>
                                </div>
                                <input type="password" name="new_password" required
                                       class="w-full pl-9 sm:pl-10 pr-3 sm:pr-4 py-2.5 sm:py-3 rounded-lg border border-gray-200 focus:border-app-primary focus:ring-2 focus:ring-app-primary/20 outline-none transition-all text-xs sm:text-sm font-medium placeholder-gray-400"
                                       placeholder="New password">
                            </div>
                        </div>

                        <div>
                            <label class="block text-xs sm:text-sm font-semibold text-app-textMain mb-1.5 sm:mb-2">Confirm Password</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-check-circle text-gray-400 text-xs sm:text-sm"></i>
                                </div>
                                <input type="password" name="confirm_password" required
                                       class="w-full pl-9 sm:pl-10 pr-3 sm:pr-4 py-2.5 sm:py-3 rounded-lg border border-gray-200 focus:border-app-primary focus:ring-2 focus:ring-app-primary/20 outline-none transition-all text-xs sm:text-sm font-medium placeholder-gray-400"
                                       placeholder="Repeat new password">
                            </div>
                        </div>
                    </div>

                    <div class="pt-3 sm:pt-4 flex justify-center sm:justify-end">
                        <button type="submit" class="w-full sm:w-auto inline-flex items-center justify-center px-5 sm:px-6 py-2.5 sm:py-3 bg-app-primary hover:bg-app-accent text-white text-xs sm:text-sm font-semibold rounded-lg shadow-md hover:shadow-lg transform transition hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-app-primary">
                            <i class="fas fa-save mr-2 text-xs sm:text-sm"></i> 
                            <span>Update Password</span>
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>