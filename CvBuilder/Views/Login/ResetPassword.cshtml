@{
    Layout = null;
    string token = ViewBag.Token != null ? ViewBag.Token.ToString() : "";
}

<!DOCTYPE html>
<html lang="en" class="h-full bg-white">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password | Profilio.space</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/public/favicon.png?v=4">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['"Plus Jakarta Sans"', 'sans-serif'] },
                    colors: {
                        brand: {
                            dark: '#0f172a',
                            primary: '#16A34A',
                            border: '#E2E8F0'
                        }
                    }
                }
            }
        }
    </script>

    <style>
        body {
            font-variant-ligatures: none;
        }

        .swiper-pagination-bullet {
            background: white;
            opacity: 0.4;
            width: 5px;
            height: 5px;
            transition: all 0.3s ease;
            margin: 0 5px !important;
        }

        .swiper-pagination-bullet-active {
            background: white;
            opacity: 1;
            width: 16px;
            border-radius: 4px;
        }

        .nav-btn {
            color: white;
            opacity: 0.7;
            transition: all 0.2s;
            cursor: pointer;
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            border: 1px solid rgba(255,255,255,0.15);
            font-size: 10px;
        }

            .nav-btn:hover {
                opacity: 1;
                background: rgba(255,255,255,0.15);
                transform: scale(1.05);
                border-color: rgba(255,255,255,0.4);
            }

            .nav-btn.paused {
                background: rgba(255,255,255,0.3);
                color: white;
                opacity: 1;
            }

        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active {
            -webkit-box-shadow: 0 0 0 30px white inset !important;
        }
    </style>
</head>
<body class="h-screen overflow-hidden antialiased text-slate-800">

    <div class="flex h-full w-full">
        <div class="hidden lg:block w-[40%] bg-brand-dark relative h-full border-r border-slate-900 group">
            <a class="absolute top-8 left-8 z-30" href='/' style="cursor:pointer">
                <img src="~/public/logo.png" alt="Logo" class="h-10 w-auto brightness-0 invert opacity-90">
            </a>

            <div class="swiper mySwiper h-full w-full">
                <div class="swiper-wrapper">
                    <div class="swiper-slide relative">
                        <img src="~/public/carousel/register1.png" class="absolute inset-0 h-full w-full object-cover">
                        <div class="absolute inset-0 bg-slate-900/60 mix-blend-multiply"></div>
                        <div class="relative z-10 h-full flex flex-col justify-end p-10 pb-28">
                            <h2 class="text-2xl font-bold text-white mb-2">Set Your New Password</h2>
                            <p class="text-white/80 text-base font-light leading-relaxed">"Choose a strong, unique password to keep your account secure. Make sure it's at least 6 characters long."</p>
                        </div>
                    </div>
                    <div class="swiper-slide relative">
                        <img src="~/public/carousel/register2.png" class="absolute inset-0 h-full w-full object-cover">
                        <div class="absolute inset-0 bg-slate-900/60 mix-blend-multiply"></div>
                        <div class="relative z-10 h-full flex flex-col justify-end p-10 pb-28">
                            <h2 class="text-2xl font-bold text-white mb-2">Security First</h2>
                            <p class="text-white/80 text-base font-light leading-relaxed">"Your password is encrypted and stored securely. We recommend using a combination of letters, numbers, and special characters."</p>
                        </div>
                    </div>
                    <div class="swiper-slide relative">
                        <img src="~/public/carousel/register3.png" class="absolute inset-0 h-full w-full object-cover">
                        <div class="absolute inset-0 bg-slate-900/60 mix-blend-multiply"></div>
                        <div class="relative z-10 h-full flex flex-col justify-end p-10 pb-28">
                            <h2 class="text-2xl font-bold text-white mb-2">Welcome Back!</h2>
                            <p class="text-white/80 text-base font-light leading-relaxed">"Once you've set your new password, you'll be able to access your portfolio and continue building your professional presence."</p>
                        </div>
                    </div>
                </div>

                <div class="absolute bottom-10 left-10 z-20 flex items-center gap-3">
                    <div class="nav-btn custom-prev" title="Previous Slide"><i class="fas fa-chevron-left"></i></div>
                    <div id="autoplayToggle" class="nav-btn" onclick="toggleAutoplay()" title="Pause Autoplay"><i class="fas fa-pause" id="autoplayIcon"></i></div>
                    <div class="swiper-pagination !static !w-auto flex items-center mx-1"></div>
                    <div class="nav-btn custom-next" title="Next Slide"><i class="fas fa-chevron-right"></i></div>
                </div>
            </div>
        </div>
        <div class="w-full lg:w-[60%] bg-white h-full relative overflow-y-auto">

            <div class="min-h-full flex flex-col justify-center items-center py-10 relative">

                <div class="absolute top-8 right-8 z-20">
                    <a href="/Login" class="flex items-center justify-center px-5 py-2 text-xs font-bold text-slate-700 bg-white border border-brand-border rounded hover:bg-slate-50 hover:text-slate-900 transition-all shadow-sm">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Sign In
                    </a>
                </div>

                <div class="w-full max-w-[460px] px-6 mt-16 lg:mt-0 mb-auto lg:mb-0">
                    <div class="text-center mb-6">
                        <img src="~/public/logo_text.png" alt="Profilio" class="h-10 mx-auto mb-5 object-contain">
                        <h1 class="text-xl font-bold tracking-tight text-slate-900">New Password</h1>
                        <p class="mt-1 text-xs text-slate-500">Set your new password. Must be at least 6 characters.</p>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="mb-4 bg-red-50 border border-red-100 rounded p-2.5 flex gap-2 items-center justify-center">
                            <i class="fas fa-circle-exclamation text-red-500 text-xs"></i>
                            <span class="text-xs text-red-700 font-medium">@ViewBag.Error</span>
                        </div>
                    }

                    @if (ViewBag.Success != null)
                    {
                        <div class="mb-4 bg-green-50 border border-green-100 rounded p-2.5 flex gap-2 items-center justify-center">
                            <i class="fas fa-check-circle text-green-500 text-xs"></i>
                            <span class="text-xs text-green-700 font-medium">@ViewBag.Success</span>
                        </div>
                        <div class="mt-4 text-center">
                            <a href="/Login" class="inline-flex items-center justify-center px-5 py-2 text-xs font-bold text-white bg-slate-900 hover:bg-slate-800 rounded transition-all">
                                <i class="fas fa-sign-in-alt mr-2"></i>
                                Sign In
                            </a>
                        </div>
                    }
                    else
                    {
                        <form action="/Login/ResetPassword" method="post" class="space-y-4">
                            <input type="hidden" name="token" value="@token" />

                            <div>
                                <label class="block text-[10px] font-bold text-slate-600 uppercase tracking-widest mb-1">New Password</label>
                                <div class="relative">
                                    <input id="newPasswordInput" name="newPassword" type="password" required placeholder="************"
                                           class="w-full pl-3 pr-10 py-2.5 bg-white border border-brand-border rounded text-slate-900 placeholder-slate-400 focus:outline-none focus:border-slate-800 focus:ring-1 focus:ring-slate-800 transition-all text-sm">

                                    <button type="button" onclick="togglePassword('newPasswordInput', 'newPasswordIcon')" class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer text-slate-400 hover:text-slate-600 transition-colors">
                                        <i class="fas fa-eye text-xs" id="newPasswordIcon"></i>
                                    </button>
                                </div>
                            </div>

                            <div>
                                <label class="block text-[10px] font-bold text-slate-600 uppercase tracking-widest mb-1">Confirm Password</label>
                                <div class="relative">
                                    <input id="confirmPasswordInput" name="confirmPassword" type="password" required placeholder="************"
                                           class="w-full pl-3 pr-10 py-2.5 bg-white border border-brand-border rounded text-slate-900 placeholder-slate-400 focus:outline-none focus:border-slate-800 focus:ring-1 focus:ring-slate-800 transition-all text-sm">

                                    <button type="button" onclick="togglePassword('confirmPasswordInput', 'confirmPasswordIcon')" class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer text-slate-400 hover:text-slate-600 transition-colors">
                                        <i class="fas fa-eye text-xs" id="confirmPasswordIcon"></i>
                                    </button>
                                </div>
                            </div>

                            <button type="submit"
                                    class="w-full flex justify-center py-3 px-4 border border-transparent rounded shadow-sm text-sm font-bold text-white bg-slate-900 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-900 transition-all duration-200 mt-2">
                                <i class="fas fa-save mr-2"></i>
                                Change Password
                            </button>
                        </form>
                    }
                </div>

                <div class="w-full text-center mt-8 lg:absolute lg:bottom-4 lg:mt-0">
                    <p class="text-[10px] text-slate-300 uppercase tracking-widest">
                        Â© <span id="year"></span> profilio.space
                    </p>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <script>
        document.getElementById("year").textContent = new Date().getFullYear();

        var swiper = new Swiper(".mySwiper", {
            spaceBetween: 0, effect: "fade", speed: 1000,
            autoplay: { delay: 5000, disableOnInteraction: false },
            pagination: { el: ".swiper-pagination", clickable: true },
            navigation: { nextEl: ".custom-next", prevEl: ".custom-prev" },
            allowTouchMove: false, loop: true
        });

        let isAutoplayRunning = true;
        function toggleAutoplay() {
            const btn = document.getElementById('autoplayToggle');
            const icon = document.getElementById('autoplayIcon');
            if (isAutoplayRunning) {
                swiper.autoplay.stop();
                icon.classList.remove('fa-pause'); icon.classList.add('fa-play');
                btn.classList.add('paused'); btn.title = "Start Autoplay";
                isAutoplayRunning = false;
            } else {
                swiper.autoplay.start();
                icon.classList.remove('fa-play'); icon.classList.add('fa-pause');
                btn.classList.remove('paused'); btn.title = "Pause Autoplay";
                isAutoplayRunning = true;
            }
        }

        function togglePassword(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>
</body>
</html>