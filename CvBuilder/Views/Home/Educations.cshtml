@using CvBuilder.Models.Entity
@using System.Globalization
@model List<educations>

<section class="scroll-mt-24 py-10 lg:py-16 min-h-[40vh] flex flex-col justify-center relative overflow-hidden" id="education">

    <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 -z-10 opacity-[0.03] pointer-events-none select-none">
        <i class="fas fa-graduation-cap text-[25rem] text-app-primary transform -rotate-12"></i>
    </div>

    <div class="flex items-center gap-3 mb-8 relative z-10">
        <div class="bg-app-primary/10 p-2.5 rounded-xl text-app-primary shadow-sm ring-1 ring-app-primary/20">
            <i class="fas fa-graduation-cap text-xl"></i>
        </div>
        <h2 class="text-3xl font-bold text-app-textMain tracking-tight">Education</h2>
    </div>

    <div class="space-y-8 border-l-2 border-app-soft ml-3 pl-6 md:pl-8 relative z-10">
        @foreach (var education in Model)
        {
            <div class="relative group">
                <div class="absolute -left-[35px] md:-left-[43px] top-1.5 h-5 w-5 rounded-full border-[3px] border-white bg-app-soft group-hover:bg-app-primary transition-colors duration-300 shadow-sm flex items-center justify-center"></div>

                <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-1 md:gap-4 mb-2">
                    <div class="flex-grow">
                        <h3 class="text-xl font-bold text-app-textMain group-hover:text-app-primary transition-colors duration-300 leading-tight">
                            @education.school
                        </h3>

                        <div class="text-sm font-semibold text-app-primary mb-1 uppercase tracking-wide">
                            @education.type
                        </div>
                    </div>

                    <div class="flex-shrink-0 mt-1 md:mt-0">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-app-secondary/20 text-app-primary border border-app-secondary/30 shadow-sm whitespace-nowrap">
                            @(education.start_date?.ToString("MMM yyyy", new CultureInfo("en-US")))
                            <span class="mx-1.5 text-app-accent/50">&rarr;</span>
                            @(education.end_date?.ToString("MMM yyyy", new CultureInfo("en-US")) ?? "Present")
                        </span>
                    </div>
                </div>

                <div class="text-app-textSub/90 leading-relaxed text-[0.95rem] max-w-4xl mb-2">
                    @education.description
                </div>

                @if (education.gpa_score != null)
                {
                    <div class="inline-flex items-center gap-1.5 bg-yellow-50 border border-yellow-200 text-yellow-700 px-2 py-0.5 rounded text-xs font-semibold shadow-sm mt-1">
                        <i class="fas fa-star text-yellow-500 text-[10px]"></i>
                        <span>GPA: @education.gpa_score</span>
                    </div>
                }
            </div>
        }
    </div>
</section>