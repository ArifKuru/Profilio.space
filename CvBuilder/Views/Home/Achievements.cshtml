@using CvBuilder.Models.Entity
@model List<achievements>

<section class="scroll-mt-24 py-10 lg:py-16 min-h-[40vh] flex flex-col justify-center relative overflow-hidden" id="awards">

    <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 -z-10 opacity-[0.03] pointer-events-none select-none">
        <i class="fas fa-trophy text-[25rem] text-app-primary transform -rotate-12"></i>
    </div>

    <div class="flex items-center gap-3 mb-8 relative z-10">
        <div class="bg-app-primary/10 p-2.5 rounded-xl text-app-primary shadow-sm ring-1 ring-app-primary/20">
            <i class="fas fa-trophy text-xl"></i>
        </div>
        <h2 class="text-3xl font-bold text-app-textMain tracking-tight">Achievements</h2>
    </div>

    <div class="grid grid-cols-1 gap-3 relative z-10 max-w-4xl">
        @foreach (var achievement in Model)
        {
            <div class="group relative bg-white p-4 rounded-xl border border-app-soft shadow-sm hover:shadow-md hover:border-app-primary/40 transition-all duration-300 hover:-translate-y-1 flex items-center overflow-hidden hover:bg-gradient-to-r hover:from-white hover:to-app-primary/5">

                <div class="absolute left-0 top-0 h-full w-1 bg-app-primary scale-y-0 group-hover:scale-y-100 transition-transform duration-300 origin-center z-20"></div>

                <div class="absolute -top-3 -right-3 text-app-soft/40 group-hover:text-app-primary/10 transition-all duration-500 transform rotate-12 group-hover:rotate-45 pointer-events-none z-0">
                    <i class="fas fa-award text-5xl"></i>
                </div>

                <div class="flex items-center gap-4 relative z-10 w-full">

                    <div class="flex-shrink-0">
                        <div class="w-10 h-10 flex items-center justify-center rounded-lg bg-yellow-50 text-yellow-600 border border-yellow-100 group-hover:bg-app-primary group-hover:text-white group-hover:border-transparent transition-all duration-300 shadow-sm">
                            <i class="fas fa-trophy text-sm"></i>
                        </div>
                    </div>

                    <div class="flex-grow pr-8">
                        <h3 class="text-[0.95rem] font-semibold text-app-textMain group-hover:text-app-primary transition-colors leading-tight">
                            @achievement.description
                        </h3>
                    </div>

                    <div class="hidden sm:block text-app-soft group-hover:text-app-primary/50 group-hover:translate-x-1 transition-all duration-300">
                        <i class="fas fa-chevron-right text-sm"></i>
                    </div>
                </div>
            </div>
        }
    </div>
</section>