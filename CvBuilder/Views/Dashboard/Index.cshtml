@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4 sm:mb-6">
    <h2 class="text-lg sm:text-xl md:text-2xl font-bold text-app-textMain">Dashboard</h2>
    <p class="text-xs sm:text-sm text-app-textSub">View your profile visit statistics.</p>
</div>

<!-- Statistics Cards -->
<div class="grid grid-cols-2 lg:grid-cols-4 gap-2.5 sm:gap-3 md:gap-4 mb-4 sm:mb-6">
    <!-- Total Visits -->
    <div class="bg-white rounded-xl shadow-sm border border-app-soft p-3 sm:p-4 md:p-6">
        <div class="flex items-center justify-between">
            <div class="min-w-0 flex-1">
                <p class="text-[10px] sm:text-xs text-app-textSub uppercase tracking-wider mb-0.5 sm:mb-1">Total Visits</p>
                <p class="text-lg sm:text-xl md:text-2xl font-bold text-app-textMain truncate">@ViewBag.TotalVisits</p>
            </div>
            <div class="w-9 h-9 sm:w-10 sm:h-10 md:w-12 md:h-12 bg-blue-100 rounded-lg flex items-center justify-center shrink-0 ml-1.5 sm:ml-2">
                <i class="fas fa-eye text-blue-600 text-base sm:text-lg md:text-xl"></i>
            </div>
        </div>
    </div>

    <!-- Today's Visits -->
    <div class="bg-white rounded-xl shadow-sm border border-app-soft p-3 sm:p-4 md:p-6">
        <div class="flex items-center justify-between">
            <div class="min-w-0 flex-1">
                <p class="text-[10px] sm:text-xs text-app-textSub uppercase tracking-wider mb-0.5 sm:mb-1">Today</p>
                <p class="text-lg sm:text-xl md:text-2xl font-bold text-app-textMain truncate">@ViewBag.TodayVisits</p>
            </div>
            <div class="w-9 h-9 sm:w-10 sm:h-10 md:w-12 md:h-12 bg-green-100 rounded-lg flex items-center justify-center shrink-0 ml-1.5 sm:ml-2">
                <i class="fas fa-calendar-day text-green-600 text-base sm:text-lg md:text-xl"></i>
            </div>
        </div>
    </div>

    <!-- This Week -->
    <div class="bg-white rounded-xl shadow-sm border border-app-soft p-3 sm:p-4 md:p-6">
        <div class="flex items-center justify-between">
            <div class="min-w-0 flex-1">
                <p class="text-[10px] sm:text-xs text-app-textSub uppercase tracking-wider mb-0.5 sm:mb-1">This Week</p>
                <p class="text-lg sm:text-xl md:text-2xl font-bold text-app-textMain truncate">@ViewBag.ThisWeekVisits</p>
            </div>
            <div class="w-9 h-9 sm:w-10 sm:h-10 md:w-12 md:h-12 bg-purple-100 rounded-lg flex items-center justify-center shrink-0 ml-1.5 sm:ml-2">
                <i class="fas fa-calendar-week text-purple-600 text-base sm:text-lg md:text-xl"></i>
            </div>
        </div>
    </div>

    <!-- This Month -->
    <div class="bg-white rounded-xl shadow-sm border border-app-soft p-3 sm:p-4 md:p-6">
        <div class="flex items-center justify-between">
            <div class="min-w-0 flex-1">
                <p class="text-[10px] sm:text-xs text-app-textSub uppercase tracking-wider mb-0.5 sm:mb-1">This Month</p>
                <p class="text-lg sm:text-xl md:text-2xl font-bold text-app-textMain truncate">@ViewBag.ThisMonthVisits</p>
            </div>
            <div class="w-9 h-9 sm:w-10 sm:h-10 md:w-12 md:h-12 bg-orange-100 rounded-lg flex items-center justify-center shrink-0 ml-1.5 sm:ml-2">
                <i class="fas fa-calendar-alt text-orange-600 text-base sm:text-lg md:text-xl"></i>
            </div>
        </div>
    </div>
</div>

<!-- Charts -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6 mb-4 sm:mb-6">
    <!-- Last 7 Days Visit Chart -->
    <div class="bg-white rounded-xl shadow-sm border border-app-soft p-4 sm:p-6">
        <h3 class="text-base sm:text-lg font-semibold text-app-textMain mb-3 sm:mb-4">Last 7 Days Visit Chart</h3>
        <div class="overflow-x-auto -mx-4 sm:mx-0 px-4 sm:px-0">
            <div id="last7DaysChart" class="h-48 sm:h-64 flex items-end justify-between gap-1 sm:gap-2 min-w-[280px]">
                <!-- Chart will be rendered here by JavaScript -->
                <div class="flex-1 flex flex-col items-center">
                    <div class="w-full bg-gray-200 rounded-t animate-pulse" style="height: 0%;"></div>
                    <p class="text-[10px] sm:text-xs text-app-textSub mt-2">-</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Hourly Visit Distribution -->
    <div class="bg-white rounded-xl shadow-sm border border-app-soft p-4 sm:p-6">
        <h3 class="text-base sm:text-lg font-semibold text-app-textMain mb-3 sm:mb-4">Hourly Visit Distribution</h3>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-6">
            <div class="w-full sm:w-auto flex justify-center">
                <canvas id="hourlyChart" class="max-w-full" style="max-width: 280px; max-height: 280px;"></canvas>
            </div>
            <div id="hourlyChartLegend" class="w-full sm:w-auto flex flex-wrap justify-center sm:justify-start gap-3 sm:gap-4">
                <!-- Legend will be rendered here by JavaScript -->
            </div>
        </div>
    </div>
</div>

<!-- CV Summary Cards -->
<div class="mb-4 sm:mb-6">
    <h3 class="text-base sm:text-lg font-semibold text-app-textMain mb-3 sm:mb-4">CV Summary</h3>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-2 sm:gap-3 md:gap-4">
        <div class="bg-white rounded-lg border border-app-soft p-2.5 sm:p-3 md:p-4">
            <div class="flex flex-col sm:flex-row items-center sm:items-start gap-2 sm:gap-2 md:gap-3">
                <div class="w-8 h-8 sm:w-9 sm:h-9 md:w-10 md:h-10 bg-blue-100 rounded-lg flex items-center justify-center shrink-0">
                    <i class="fas fa-briefcase text-blue-600 text-xs sm:text-sm"></i>
                </div>
                <div class="min-w-0 text-center sm:text-left flex-1">
                    <p class="text-lg sm:text-xl md:text-2xl font-bold text-app-textMain">@(ViewBag.ExperiencesCount ?? 0)</p>
                    <p class="text-[10px] sm:text-xs text-app-textSub truncate">Experiences</p>
                </div>
