                    <p class="text-lg sm:text-xl md:text-2xl font-bold text-app-textMain">@(ViewBag.WorkflowsCount ?? 0)</p>
                    <p class="text-[10px] sm:text-xs text-app-textSub truncate">Projects</p>
                </div>
