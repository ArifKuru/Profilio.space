@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="h-full bg-white">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login | Profilio.space</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" sizes="32x32" href="~/public/favicon.png?v=4">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['"Plus Jakarta Sans"', 'sans-serif'] },
                    colors: {
                        brand: {
                            dark: '#0f172a',
                            primary: '#16A34A',
                            border: '#E2E8F0'
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="h-screen overflow-hidden antialiased text-slate-800 bg-app-bg">
    <div class="flex h-full w-full items-center justify-center">
        <div class="w-full max-w-[460px] px-6">
            <div class="text-center mb-6">
                <img src="~/public/logo_text.png" alt="Profilio" class="h-10 mx-auto mb-5 object-contain">
                <h1 class="text-xl font-bold tracking-tight text-slate-900">Admin Login</h1>
                <p class="mt-1 text-xs text-slate-500">Please enter your admin credentials.</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="mb-4 bg-red-50 border border-red-100 rounded p-2.5 flex gap-2 items-center justify-center">
                    <i class="fas fa-circle-exclamation text-red-500 text-xs"></i>
                    <span class="text-xs text-red-700 font-medium">@ViewBag.Error</span>
                </div>
            }

            <form action="/ps-admin/login" method="post" class="space-y-4">
                <div>
                    <label class="block text-[10px] font-bold text-slate-600 uppercase tracking-widest mb-1">Username</label>
                    <input name="username" type="text" required placeholder="admin"
                           class="w-full px-3 py-2.5 bg-white border border-brand-border rounded text-slate-900 placeholder-slate-400 focus:outline-none focus:border-slate-800 focus:ring-1 focus:ring-slate-800 transition-all text-sm">
                </div>

                <div>
                    <label class="block text-[10px] font-bold text-slate-600 uppercase tracking-widest mb-1">Password</label>
                    <div class="relative">
                        <input id="passwordInput" name="password" type="password" required placeholder="************"
                               class="w-full pl-3 pr-10 py-2.5 bg-white border border-brand-border rounded text-slate-900 placeholder-slate-400 focus:outline-none focus:border-slate-800 focus:ring-1 focus:ring-slate-800 transition-all text-sm">

                        <button type="button" onclick="togglePassword()" class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer text-slate-400 hover:text-slate-600 transition-colors">
                            <i class="fas fa-eye text-xs" id="toggleIcon"></i>
                        </button>
                    </div>
                </div>

                <button type="submit"
                        class="w-full flex justify-center py-3 px-4 border border-transparent rounded shadow-sm text-sm font-bold text-white bg-slate-900 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-900 transition-all duration-200 mt-2">
                    Sign In
                </button>
            </form>

            <div class="mt-6 text-center">
                <a href="/" class="text-xs text-slate-500 hover:text-slate-700 transition-colors">
                    <i class="fas fa-arrow-left mr-1"></i> Back to Home
                </a>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const icon = document.getElementById('toggleIcon');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>
</body>
</html>

