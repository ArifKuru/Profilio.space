@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="h-full bg-white">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Account | Profolio.space</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/public/favicon.png?v=4">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['"Plus Jakarta Sans"', 'sans-serif'] },
                    colors: {
                        brand: {
                            dark: '#0f172a', /* Slate 900 */
                            primary: '#16A34A',
                            border: '#E2E8F0' /* Slate 200 */
                        }
                    },
                    animation: {
                        'fade-in-down': 'fadeInDown 0.2s ease-out'
                    },
                    keyframes: {
                        fadeInDown: {
                            '0%': { opacity: '0', transform: 'translateY(-10px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' },
                        }
                    }
                }
            }
        }
    </script>

    <style>
        /* Slider Noktaları */
        .swiper-pagination-bullet {
            background: white;
            opacity: 0.4;
            width: 5px;
            height: 5px;
            transition: all 0.3s ease;
            margin: 0 5px !important;
        }

        .swiper-pagination-bullet-active {
            background: white;
            opacity: 1;
            width: 16px;
            border-radius: 4px;
        }

        /* Navigasyon Butonları (Yuvarlak ve Minimal) */
        .nav-btn {
            color: white;
            opacity: 0.7;
            transition: all 0.2s;
            cursor: pointer;
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            border: 1px solid rgba(255,255,255,0.15);
            font-size: 10px;
        }

            .nav-btn:hover {
                opacity: 1;
                background: rgba(255,255,255,0.15);
                transform: scale(1.05);
                border-color: rgba(255,255,255,0.4);
            }
            /* Aktif olmayan butonu biraz daha silik yapalım */
            .nav-btn.paused {
                background: rgba(255,255,255,0.3);
                color: white;
                opacity: 1;
            }

        /* Input Autofill Fix */
        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active {
            -webkit-box-shadow: 0 0 0 30px white inset !important;
        }
    </style>
</head>
<body class="h-screen overflow-hidden antialiased text-slate-800">

    <div class="flex h-full w-full">

        <div class="hidden lg:block w-[40%] bg-brand-dark relative h-full border-r border-slate-900 group">

            <a class="absolute top-8 left-8 z-30" href='/' style="cursor:pointer">
                <img src="~/public/logo_tide.png" alt="Logo" class="h-6 w-auto brightness-0 invert opacity-90">
            </a>

            <div class="swiper mySwiper h-full w-full">
                <div class="swiper-wrapper">
                    <div class="swiper-slide relative">
                        <img src="~/public/carousel/register1.png" class="absolute inset-0 h-full w-full object-cover">
                        <div class="absolute inset-0 bg-slate-900/60 mix-blend-multiply"></div>
                        <div class="relative z-10 h-full flex flex-col justify-end p-10 pb-28">
                            <h2 class="text-2xl font-bold text-white mb-2">Create Your Profolio Space</h2>
                            <p class="text-white/80 text-base font-light leading-relaxed">"Build your professional portfolio in minutes. Showcase your skills, experiences, and achievements with a beautiful, personalized profile page."</p>
                        </div>
                    </div>
                    <div class="swiper-slide relative">
                        <img src="~/public/carousel/register2.png" class="absolute inset-0 h-full w-full object-cover">
                        <div class="absolute inset-0 bg-slate-900/60 mix-blend-multiply"></div>
                        <div class="relative z-10 h-full flex flex-col justify-end p-10 pb-28">
                            <h2 class="text-2xl font-bold text-white mb-2">One-Click PDF CV Export</h2>
                            <p class="text-white/80 text-base font-light leading-relaxed">"Generate a polished, print-ready PDF version of your CV directly from your profile data. Perfect for job applications and offline sharing."</p>
                        </div>
                    </div>
                    <div class="swiper-slide relative">
                        <img src="~/public/carousel/register3.png" class="absolute inset-0 h-full w-full object-cover">
                        <div class="absolute inset-0 bg-slate-900/60 mix-blend-multiply"></div>
                        <div class="relative z-10 h-full flex flex-col justify-end p-10 pb-28">
                            <h2 class="text-2xl font-bold text-white mb-2">Stunning & Responsive Design</h2>
                            <p class="text-white/80 text-base font-light leading-relaxed">"Your portfolio will look impeccable on any device, from desktops to smartphones, ensuring a seamless experience for all visitors."</p>
                        </div>
                    </div>
                </div>

                <div class="absolute bottom-10 left-10 z-20 flex items-center gap-3">

                    <div class="nav-btn custom-prev" title="Previous Slide">
                        <i class="fas fa-chevron-left"></i>
                    </div>

                    <div id="autoplayToggle" class="nav-btn" onclick="toggleAutoplay()" title="Pause Autoplay">
                        <i class="fas fa-pause" id="autoplayIcon"></i>
                    </div>

                    <div class="swiper-pagination !static !w-auto flex items-center mx-1"></div>

                    <div class="nav-btn custom-next" title="Next Slide">
                        <i class="fas fa-chevron-right"></i>
                    </div>
                </div>

            </div>
        </div>

        <div class="w-full lg:w-[60%] bg-white h-full flex flex-col justify-center items-center relative">

            <div class="absolute top-8 left-8 z-20">
                <div class="relative">
                    <button onclick="toggleLang()" class="flex items-center gap-2 text-xs font-bold text-slate-500 hover:text-slate-900 transition-colors focus:outline-none bg-transparent py-2 rounded">
                        <i class="fas fa-globe"></i> English <i class="fas fa-chevron-down text-[9px]"></i>
                    </button>
                    <div id="langMenu" class="hidden absolute top-full left-0 mt-2 w-36 bg-slate-900 text-white text-[10px] rounded py-2 px-3 shadow-xl z-50 animate-fade-in-down">
                        Others coming soon...
                        <div class="absolute -top-1 left-3 w-2 h-2 bg-slate-900 rotate-45"></div>
                    </div>
                </div>
            </div>

            <div class="absolute top-8 right-8 z-20">
                <div class="flex items-center gap-3">
                    <span class="text-xs text-slate-500 font-medium hidden sm:inline">Already have an account?</span>
                    <a href="/login" class="flex items-center justify-center px-5 py-2 text-xs font-bold text-slate-700 bg-white border border-brand-border rounded hover:bg-slate-50 hover:text-slate-900 transition-all shadow-sm">
                        Log in
                    </a>
                </div>
            </div>

            <div class="w-full max-w-[460px] px-6">

                <div class="text-center mb-6">
                    <img src="~/public/logo_text.png" alt="Profolio" class="h-10 mx-auto mb-5 object-contain">
                    <h1 class="text-xl font-bold tracking-tight text-slate-900">Create your account</h1>
                    <p class="mt-1 text-xs text-slate-500">Start building your portfolio in seconds.</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="mb-4 bg-red-50 border border-red-100 rounded p-2.5 flex gap-2 items-center justify-center">
                        <i class="fas fa-circle-exclamation text-red-500 text-xs"></i>
                        <span class="text-xs text-red-700 font-medium">@ViewBag.Error</span>
                    </div>
                }

                <form action="/Register/Index" method="post" class="space-y-3">

                    <div class="grid grid-cols-2 gap-3">
                        <div>
                            <label class="block text-[10px] font-bold text-slate-600 uppercase tracking-widest mb-1">Name</label>
                            <input name="name" type="text" required placeholder="John"
                                   class="w-full px-3 py-2.5 bg-white border border-brand-border rounded text-slate-900 placeholder-slate-400 focus:outline-none focus:border-slate-800 focus:ring-1 focus:ring-slate-800 transition-all text-sm">
                        </div>
                        <div>
                            <label class="block text-[10px] font-bold text-slate-600 uppercase tracking-widest mb-1">Surname</label>
                            <input name="surname" type="text" required placeholder="Doe"
                                   class="w-full px-3 py-2.5 bg-white border border-brand-border rounded text-slate-900 placeholder-slate-400 focus:outline-none focus:border-slate-800 focus:ring-1 focus:ring-slate-800 transition-all text-sm">
                        </div>
                    </div>

                    <div>
                        <label class="block text-[10px] font-bold text-slate-600 uppercase tracking-widest mb-1">Username</label>
                        <input name="username" type="text" required placeholder="johndoe"
                               class="w-full px-3 py-2.5 bg-white border border-brand-border rounded text-slate-900 placeholder-slate-400 focus:outline-none focus:border-slate-800 focus:ring-1 focus:ring-slate-800 transition-all text-sm">
                    </div>

                    <div>
                        <label class="block text-[10px] font-bold text-slate-600 uppercase tracking-widest mb-1">Work Email</label>
                        <input name="email" type="email" required placeholder="name@company.com"
                               class="w-full px-3 py-2.5 bg-white border border-brand-border rounded text-slate-900 placeholder-slate-400 focus:outline-none focus:border-slate-800 focus:ring-1 focus:ring-slate-800 transition-all text-sm">
                    </div>

                    <div>
                        <label class="block text-[10px] font-bold text-slate-600 uppercase tracking-widest mb-1">Password</label>
                        <div class="relative">
                            <input id="passwordInput" name="plain_password" type="password" required placeholder="••••••••"
                                   class="w-full pl-3 pr-10 py-2.5 bg-white border border-brand-border rounded text-slate-900 placeholder-slate-400 focus:outline-none focus:border-slate-800 focus:ring-1 focus:ring-slate-800 transition-all text-sm">
                            <button type="button" onclick="togglePassword()" class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer text-slate-400 hover:text-slate-600 transition-colors">
                                <i class="fas fa-eye text-xs" id="toggleIcon"></i>
                            </button>
                        </div>
                    </div>

                    <div class="flex items-center pt-1">
                        <input id="terms" name="terms" type="checkbox" required
                               class="h-3.5 w-3.5 text-slate-900 border-slate-300 rounded focus:ring-slate-900 cursor-pointer accent-slate-900">
                        <label for="terms" class="ml-2 block text-xs text-slate-500">
                            I agree to the <a href="@Url.Action("Index", "Landing")#terms" target="_blank" class="text-slate-800 font-semibold hover:underline">Terms</a> & <a href="@Url.Action("Index", "Landing")#privacy" target="_blank" class="text-slate-800 font-semibold hover:underline">Privacy Policy</a>.
                        </label>
                    </div>

                    <button type="submit"
                            class="w-full flex justify-center py-3 px-4 border border-transparent rounded shadow-sm text-sm font-bold text-white bg-slate-900 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-900 transition-all duration-200 mt-2">
                        Create Account
                    </button>
                </form>
            </div>

            <div class="absolute bottom-4 w-full text-center">
                <p class="text-[10px] text-slate-300 uppercase tracking-widest">
                    © <span id="year"></span> profolio.space
                </p>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <script>
        document.getElementById("year").textContent = new Date().getFullYear();
        // Swiper Başlatma
        var swiper = new Swiper(".mySwiper", {
            spaceBetween: 0,
            effect: "fade",
            speed: 1000,
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            navigation: {
                nextEl: ".custom-next",
                prevEl: ".custom-prev",
            },
            allowTouchMove: false,
            loop: true
        });

        // Autoplay Toggle (Start/Stop) Logic
        let isAutoplayRunning = true;
        function toggleAutoplay() {
            const btn = document.getElementById('autoplayToggle');
            const icon = document.getElementById('autoplayIcon');

            if (isAutoplayRunning) {
                swiper.autoplay.stop();
                icon.classList.remove('fa-pause');
                icon.classList.add('fa-play');
                btn.classList.add('paused'); // Görsel olarak farklılaştırma (opak yapma vb)
                btn.title = "Start Autoplay";
                isAutoplayRunning = false;
            } else {
                swiper.autoplay.start();
                icon.classList.remove('fa-play');
                icon.classList.add('fa-pause');
                btn.classList.remove('paused');
                btn.title = "Pause Autoplay";
                isAutoplayRunning = true;
            }
        }

        // Şifre Göster/Gizle
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const icon = document.getElementById('toggleIcon');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        // Dil Menüsü
        function toggleLang() {
            const menu = document.getElementById('langMenu');
            menu.classList.toggle('hidden');
            if (!menu.classList.contains('hidden')) {
                setTimeout(() => {
                    menu.classList.add('hidden');
                }, 3000);
            }
        }
    </script>
</body>
</html>